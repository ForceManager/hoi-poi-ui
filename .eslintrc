{
    "extends": [
        "react-app",
        "prettier",
        "prettier/react",
        "plugin:jest/recommended"
    ],
    "plugins": [
        "prettier"
    ],
    "settings": {
        "react": {
            "pragma": "React",
            "version": "detect"
        }
    },
    "rules": {
        "react-hooks/rules-of-hooks": false,
        "react-hooks/exhaustive-deps": false
    },
    "globals": {
        "window": true,
        "document": true,
        "localStorage": true,
        "FormData": true,
        "FileReader": true,
        "Blob": true,
        "navigator": true
    },
    "parser": "babel-eslint"
}
